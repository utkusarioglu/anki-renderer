{
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "allowJs": true,
    "removeComments": true,
    "isolatedModules": true,
    "moduleResolution": "Bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src/main.mts"]
}

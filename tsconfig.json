{
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",
    "module": "NodeNext",
    "target": "ESNext",
    "strict": true,
    "allowJs": true,
    "removeComments": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "exactOptionalPropertyTypes": true,
    "noEmitOnError": true,
    "types": ["jest", "node", "mathjax"]
  },
  "include": ["src/main.mts"]
}
